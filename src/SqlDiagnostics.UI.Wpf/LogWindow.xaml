<Window x:Class="SqlDiagnostics.UI.Wpf.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:logging="clr-namespace:SqlDiagnostics.UI.Wpf.Logging"
        Title="Application Logs"
        Height="500"
        Width="780"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Recent Log Entries" FontSize="18" FontWeight="SemiBold"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{x:Static logging:AppLog.Entries}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="0,12,0,12"
                  SelectionMode="Single"
                  Name="LogGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="160" />
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80" />
                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="140" />
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Copy Selected"
                    Width="130"
                    Click="OnCopySelected"/>
            <Button Content="Copy All"
                    Width="110"
                    Click="OnCopyAll"/>
            <Button Content="Close"
                    Width="90"
                    IsCancel="True"
                    Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
