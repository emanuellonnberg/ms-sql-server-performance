<Window x:Class="SqlDiagnostics.UI.Wpf.QuickTriageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SqlDiagnostics.UI.Wpf.ViewModels"
        Title="Quick Triage"
        Height="520"
        Width="860"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Loaded="OnLoaded">
    <Window.DataContext>
        <vm:QuickTriageViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#f5f7fb" Padding="12" CornerRadius="6" BorderBrush="#d0d7e3" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock Text="{Binding DurationText}" Foreground="Gray" Margin="0,4,0,0"/>
                </StackPanel>
                <ProgressBar Width="180" Height="12" Margin="16,0,0,0" IsIndeterminate="True"
                             Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="6" BorderBrush="#d0d7e3" BorderThickness="1" Padding="16" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Diagnosis" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Category}" FontSize="16" FontWeight="Bold" Margin="0,12,0,0"/>
                    <TextBlock Text="{Binding Diagnosis}" TextWrapping="Wrap" Margin="0,6,0,0"/>

                    <TextBlock Text="Summary" FontSize="16" FontWeight="SemiBold" Margin="0,16,0,0"/>
                    <ScrollViewer Margin="0,6,0,0" Height="120" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding Summary}" TextWrapping="Wrap"/>
                    </ScrollViewer>

                    <TextBlock Text="Recommendations" FontSize="16" FontWeight="SemiBold" Margin="0,16,0,0"/>
                    <ScrollViewer Margin="0,6,0,0" Height="100" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding RecommendationsText}" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Progress" FontSize="16" FontWeight="SemiBold"/>
                    <ListBox ItemsSource="{Binding ProgressMessages}" Height="240" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="6" BorderBrush="#d0d7e3" BorderThickness="1" Padding="16" Margin="0,16,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Tests}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemWidth="240" ItemHeight="Auto" HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,12,12" Padding="12" CornerRadius="8" BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#f4f6fb"/>
                                        <Setter Property="BorderBrush" Value="#d0d7e3"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Success}" Value="True">
                                                <Setter Property="Background" Value="#e6f4ea"/>
                                                <Setter Property="BorderBrush" Value="#83c197"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Success}" Value="False">
                                                <Setter Property="Background" Value="#fdecea"/>
                                                <Setter Property="BorderBrush" Value="#f0998f"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="{Binding StatusText}" FontWeight="Bold" Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding Details}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                                    <TextBlock Text="{Binding DurationDisplay}" Foreground="Gray" Margin="0,4,0,0"/>

                                    <ItemsControl ItemsSource="{Binding Issues}" Margin="0,6,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="• " Foreground="#b34a34"/>
                                                    <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.Style>
                                            <Style TargetType="ItemsControl">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasIssues}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Style>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button Content="Run Again" Width="110"
                        IsEnabled="{Binding CanRun}"
                        Click="OnRunAgainClick"/>
                <Separator Width="1" Margin="6,0,6,0" Visibility="Collapsed"/>
                <Button Content="Connection Quality…" Width="160" Margin="8,0,0,0"
                        Click="OnOpenConnectionQualityClick"/>
                <Button Content="Full Diagnostics…" Width="150" Margin="8,0,0,0"
                        Click="OnOpenFullDiagnosticsClick"/>
                <Button Content="Save JSON…" Width="120" Margin="8,0,0,0"
                        IsEnabled="{Binding HasResult}"
                        Click="OnExportJsonClick"/>
                <Button Content="Save Markdown…" Width="140" Margin="8,0,0,0"
                        IsEnabled="{Binding HasResult}"
                        Click="OnExportMarkdownClick"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Width="100" Click="OnCloseClick"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
